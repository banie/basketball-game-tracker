<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="match_parent"
  android:gravity="center">

  <include
    android:id="@+id/fga_stat"
    layout="@layout/stat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp" />

  <include
    android:id="@+id/fgm_stat"
    layout="@layout/stat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_toEndOf="@id/fga_stat"
    android:layout_toRightOf="@id/fga_stat" />

  <include
    android:id="@+id/o_stat"
    layout="@layout/stat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/fga_stat"
    android:layout_margin="10dp" />

  <include
    android:id="@+id/d_stat"
    layout="@layout/stat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/fgm_stat"
    android:layout_margin="10dp"
    android:layout_toEndOf="@id/o_stat"
    android:layout_toRightOf="@id/o_stat" />

  <include
    android:id="@+id/a_stat"
    layout="@layout/stat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/o_stat"
    android:layout_margin="10dp" />

  <include
    android:id="@+id/s_stat"
    layout="@layout/stat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/d_stat"
    android:layout_margin="10dp"
    android:layout_toEndOf="@id/a_stat"
    android:layout_toRightOf="@id/a_stat" />

  <include
    android:id="@+id/b_stat"
    layout="@layout/stat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/a_stat"
    android:layout_margin="10dp" />

  <include
    android:id="@+id/t_stat"
    layout="@layout/stat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/s_stat"
    android:layout_margin="10dp"
    android:layout_toEndOf="@id/b_stat"
    android:layout_toRightOf="@id/b_stat" />

</RelativeLayout>