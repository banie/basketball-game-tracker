<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/empty_placeholder"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  android:orientation="vertical"
  android:paddingEnd="@dimen/empty_placeholder_side_padding"
  android:paddingLeft="@dimen/empty_placeholder_side_padding"
  android:paddingRight="@dimen/empty_placeholder_side_padding"
  android:paddingStart="@dimen/empty_placeholder_side_padding"
  android:visibility="gone">

  <ImageView
    android:id="@+id/main_img_no_data"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="21dp"
    android:src="@mipmap/ic_face_black"
    android:tint="@color/wetasphalt" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/you_have_no_game_saved"
    android:textAlignment="center"
    android:textColor="@color/wetasphalt"
    android:textSize="16sp" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="21dp"
    android:text="@string/add_button_desc"
    android:textAlignment="center"
    android:textColor="@color/wetasphalt"
    android:textSize="16sp" />

</LinearLayout>